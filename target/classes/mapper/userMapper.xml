<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.fastcampus.ch2.mapper.UserMapper">
	 <sql id="selectFromUser">
	 	SELECT id, pwd, name, email, birth, sns, reg_date
	 	FROM user_info
     </sql>
     <select id="selectById" parameterType="string" resultType="UserDTO">
     	<include refid="selectFromUser"/>
     	WHERE id = #{id}
     </select>
</mapper>